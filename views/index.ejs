<!DOCTYPE html>
<html>
  <head>
    <title><%= __("Backend fundamentals") %></title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <nav>
      <ul class="nav-list">
        <div><%= __("Select language") %>:</div>
        <% getLocales().forEach( lang => { %>
          <li class="nav-item">
            <a href="./?lang=<%= lang %>" class="nav-link"><%= lang %></a>
          </li>
        <% }) %>
      </ul>
    </nav>
    <h1><%= __("Backend fundamentals") %></h1>
    <main class="anuncios-grid-container">
      <% anuncios.forEach(anuncio => { %>
      <ul class="anuncio-container">
        <li class="foto">
          <img src="..<%= anuncio.foto %>" alt="<%= __("image-not-available") %>" />
        </li>
        <li class="name"><%= anuncio.nombre %></li>
        <li class="venta"><%= __("For sale") %>: <%= anuncio.venta %></li>
        <li class="precio"><%= anuncio.precio %> <%= __("$") %></li>
        <li class="tags"><%= __("Tags") %>: <%= anuncio.tags %></li>
      </ul>
      <% }); %>
    </main>
  </body>
</html>
